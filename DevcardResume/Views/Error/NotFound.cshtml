﻿@{
     ViewBag.Title = "Not Found";
}

<section class="about-me-section p-3 p-lg-5 theme-bg-light">

    <div class="container">
        <div class="col">
            <h1 class="name text-center font-weight-bold">404 - Page Not Found</h1>
            <h1 class="name text-center font-weight-bold">@ViewBag.ErrorMessage</h1>
            <h1 class="name text-center font-weight-bold">@ViewBag.Path</h1>
            <h1 class="name text-center font-weight-bold">@ViewBag.QS</h1>
            <div class="text-center py-3">
                <a asp-action="index" asp-controller="home" class="btn btn-primary">
                    <i class="fas fa-arrow-alt-circle-right me-2"></i> Go Home
                </a>
            </div>
        </div>
    </div>
</section>

